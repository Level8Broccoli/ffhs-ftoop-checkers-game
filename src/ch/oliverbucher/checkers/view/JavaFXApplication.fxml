<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="%WINDOW_HEIGHT" prefWidth="%WINDOW_WIDTH" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ch.oliverbucher.checkers.view.JavaFXApplication" alignment="TOP_CENTER">
    <children>
        <Label text="%TXT_WELCOME" />
        <Label text="%TXT_OPPONENT_QUESTION" />
        <HBox alignment="CENTER">
            <fx:define>
                <ToggleGroup fx:id="playerType" />
            </fx:define>
            <children>
                <ToggleButton text="%BTN_HUMAN" toggleGroup="$playerType" />
                <ToggleButton text="%BTN_COMPUTER" toggleGroup="$playerType" />
            </children>
        </HBox>
        <Button text="%BTN_START_GAME" />
        <HBox alignment="BOTTOM_RIGHT">
            <children>
              <Label text="%GAME_VERSION" />
            </children>
        </HBox>
    </children>
</VBox>